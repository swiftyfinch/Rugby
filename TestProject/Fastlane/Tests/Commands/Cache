#!/bin/ruby

lane :cache_both do
    cocoapods(try_repo_update_on_error: true)
    sh "cd .. && rugby -a arm64 arm64 -s ios sim --no-bell -q"
    run_unit_tests
    build_ios

    sh "cd .. && rugby rollback -q"
    ensure_git_clean
end

lane :cache_exclude do
    cocoapods(try_repo_update_on_error: true)
    sh "cd .. && rugby -a arm64 -e Alamofire --use-relative-paths --no-bell -q"
    run_unit_tests

    sh "cd .. && rugby rollback -q"
    ensure_git_clean
end

lane :cache_different_config do
    cocoapods(try_repo_update_on_error: true)
    sh "cd .. && rugby -a arm64 -c \"Staging With Spaces\" --use-relative-paths --no-bell -q"
    build(configuration: "Staging With Spaces")

    sh "cd .. && rugby rollback -q"
    ensure_git_clean
end
